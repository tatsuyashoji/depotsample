<!DOCTYPE html>
<html>
  <head>
    <title>Pragprog Books Online Store</title>
    <meta charset="UTF-8" />
    <%= stylesheet_link_tag "depot", :media => "all" %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body id="store">
    <div id="banner">
        <%= image_tag("logo.png") %>
        <%= @page_title || "Pragmatic Bookshelf" %>
    </div>
    <div id ="columns">
        <div id="side">
          <% hidden_div_if(@cart.items.empty?, :id => "cart") do %>
            <%= render(:partial => "cart", :object => @cart) %>
          <% end %>
          <a href="#">Home</a><br />
          <a href="#">FAQ</a><br />
          <a href="#">News</a><br />
          <a href="#">Contact</a><br />
        </div>
        <div id="main">
          <% if flash[:notice] %>
            <div id="notice"><%= flash[:notice] %></div>
          <% end %>
          <%= yield :layout %>
        </div>
    </div>
  </body>
</html>