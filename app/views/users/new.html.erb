<h1>New user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <legend>User information</legend>
    
    <div>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :user_password, 'Password' %><br />
      <%= f.password_field :password, :size => 40 %>
    </div>
    <div>
      <%= f.label :user_password_confirmation, 'Confirmation' %><br />
      <%= f.password_field :password_confirmation, :size => 40 %>
    </div>
    <div>
      <%= f.submit 'Create' %>
    </div>
  </fieldset>
<% end %>

<%= link_to 'Back', users_path %>